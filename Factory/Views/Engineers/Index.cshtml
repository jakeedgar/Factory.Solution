@{
  Layout="_Layout";
}
@await Html.PartialAsync("Navbar")

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
} 

<section class="engineer-list">
  @foreach (Engineer engineer in Model)
  {
    <li> @Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId }) </li>
  }
</section>

<p>@Html.ActionLink("Add new engineer", "Create", null, null, new { @Class = "btn btn-primary"})</p>