@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Engineer Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Focus): @Html.DisplayFor(model => model.Focus)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This Engineer does not work on any machines.</p>
}
else
{
  <h4>Machines this engineer is licensed to work on:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Machine.Name</li>
  @using (Html.BeginForm("DeleteEngineer", "Engineers"))
    {
      @Html.Hidden("joinId", @join.MachineEngineerId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}