@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer


<h2>Add a machine</h2>

<h4>surprise this engineer with a new machine to operate for the same pay: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  @Html.Label("Choose Machine:")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to engineer list", "Index")</p>
<p>@Html.ActionLink("Home or whatever you wanna call it", "Index", "Home")</p>